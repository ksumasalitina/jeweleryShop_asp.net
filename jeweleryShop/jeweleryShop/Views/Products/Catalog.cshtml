
@using System.Globalization
@using System.Collections

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
           
@{
    foreach (var prod in Model.AllProducts) {
        <div class="col">
            <div class="card shadow-sm">
                <img class="bd-placeholder-img card-img-top" width="100%" height="250" src="@prod.img">

                <div class="card-body">
                    <p><b>@prod.name</b></p>
                    <p class="card-text text-muted">@prod.description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="#" class="btn btn-primary my-2">Add to cart</a>
                        </div>
                        <p>$@prod.price</p>
                    </div>
                </div>
            </div>
        </div>
            }
    }
    </div>
</div>
</div>